---
import Layout from '~/layouts/PageLayout.astro';
import StickyHeader from '~/components/widgets/StickyHeader.astro';
import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
}

const { metadata } = Astro.props;
---

<Layout metadata={metadata}>
  <!-- Reemplazar el header normal con el sticky header -->
  <StickyHeader slot="header" />
  
  <!-- Contenido principal -->
  <main class="overflow-x-hidden">
    <slot />
  </main>
  
  <!-- Footer se mantiene del layout base -->
</Layout>

<style>
  /* Estilos globales para la landing page */
  :global(html) {
    scroll-behavior: smooth;
  }

  /* Ajustar el padding top para compensar el header sticky */
  :global(main > *:first-child) {
    scroll-margin-top: 80px;
  }

  /* Estilos para las secciones con ID para mejor navegaci√≥n */
  :global(section[id], div[id]) {
    scroll-margin-top: 80px;
  }

  /* Mejorar la visibilidad de las transiciones */
  :global(.section-transition) {
    @apply transition-all duration-300 ease-in-out;
  }
</style>
