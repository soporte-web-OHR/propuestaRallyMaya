---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import { Icon } from 'astro-icon/components';

const {
  title = 'Calculadora de Presupuesto Rally Maya México',
  subtitle = 'Cotización basada en especificaciones técnicas reales del proyecto',
  tagline = 'Presupuesto Real',
  id = 'pricing',
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

// Cotización unificada basada en documentos reales (precios en MXN)
const fases = [
  {
    id: 'fase1',
    title: 'Diseño UX/UI Completo',
    description: 'Investigación, wireframes, diseño visual, sistema UI y handoff técnico',
    price: 55000, // $55,000 MXN según cotización original
    duration: 4.5,
    items: [
      'Investigación UX y benchmark completo',
      'Wireframes desktop y mobile (~36 frames)',
      'Diagramas de flujo (inscripción, login)',
      'Diseño UI visual en Figma',
      'Sistema visual y UI Kit completo',
      'Diseño de mailings y plantillas',
      'Diseño de blog y secciones adicionales',
      'Handoff técnico y soporte a desarrollo'
    ],
    icon: 'tabler:palette',
    popular: true,
    details: {
      subtasks: [
        { name: 'Investigación UX y Arquitectura', hours: '8h', cost: '$6,000' },
        { name: 'Wireframes y Experiencia de Usuario', hours: '12h', cost: '$9,500' },
        { name: 'Diseño UI Visual', hours: '24h', cost: '$20,000' },
        { name: 'Sistema Visual y UI Kit', hours: '10h', cost: '$8,000' },
        { name: 'Diseño de Mailings', hours: '5h', cost: '$3,500' },
        { name: 'Handoff Técnico y Soporte', hours: '6h', cost: '$4,000' },
        { name: 'Diseño de Blog', hours: '6h', cost: '$4,000' }
      ]
    }
  },
  {
    id: 'fase2',
    title: 'Desarrollo Web Informativo + CMS',
    description: 'Sitio completo con Next.js, Strapi CMS, PostgreSQL y funcionalidades base',
    price: 82500, // $75,000-$90,000 MXN promedio
    duration: 4,
    items: [
      'Desarrollo con Next.js + Tailwind CSS',
      'CMS Strapi auto-hospedado',
      'Base de datos PostgreSQL',
      'Sitio web informativo completo',
      'Panel de administración',
      'Integración con Google Analytics',
      'Optimización SEO técnica',
      'Responsive design completo'
    ],
    icon: 'tabler:code',
    popular: true,
    details: {
      subtasks: [
        { name: 'Web informativa + CMS', hours: '100h', cost: '$75,000-$90,000' },
        { name: 'Configuración inicial', hours: '20h', cost: 'Incluido' },
        { name: 'Optimización SEO', hours: '15h', cost: 'Incluido' },
        { name: 'Testing básico', hours: '10h', cost: 'Incluido' }
      ]
    }
  },
  {
    id: 'fase3',
    title: 'Funcionalidades Avanzadas',
    description: 'Blog, galería, registro de usuarios, perfiles y pasarela de pago',
    price: 88125, // Suma de módulos adicionales promedio
    duration: 3.5,
    items: [
      'Blog completo con categorías y tags',
      'Galería multimedia avanzada',
      'Sistema de registro y perfiles',
      'Pasarela de pago integrada',
      'Zona privada para usuarios',
      'Sistema de notificaciones email',
      'CDN para optimización de imágenes',
      'Integración con SendGrid'
    ],
    icon: 'tabler:settings',
    popular: true,
    details: {
      subtasks: [
        { name: 'Blog completo', hours: '50h', cost: '$40,500-$47,250' },
        { name: 'Galería multimedia', hours: '12h', cost: '$10,500-$12,600' },
        { name: 'Registro + perfil', hours: '24h', cost: '$17,500-$21,000' },
        { name: 'Pasarela de pago', hours: '12h', cost: '$7,500-$9,000' }
      ]
    }
  },
  {
    id: 'fase4',
    title: 'QA, Testing y Lanzamiento',
    description: 'Testing completo, optimización, documentación y puesta en producción',
    price: 12900, // $12,000-$13,800 MXN promedio
    duration: 2,
    items: [
      'Testing funcional completo',
      'Testing de seguridad',
      'Optimización de performance',
      'Documentación técnica',
      'Capacitación del equipo',
      'Configuración de hosting',
      'Puesta en producción',
      'Soporte post-lanzamiento (1 mes)'
    ],
    icon: 'tabler:rocket',
    popular: false,
    details: {
      subtasks: [
        { name: 'Testing y QA', hours: '32h', cost: '$12,000-$13,800' },
        { name: 'Optimización', hours: '5h', cost: 'Incluido' },
        { name: 'Documentación', hours: '4h', cost: 'Incluido' },
        { name: 'Puesta en producción', hours: '3h', cost: 'Incluido' }
      ]
    }
  }
];

const extras = [
  {
    id: 'mantenimiento',
    title: 'Mantenimiento Técnico (6 meses)',
    description: 'Soporte técnico, actualizaciones de seguridad y backup automático',
    price: 24000, // $4,000/mes x 6 meses
    icon: 'tabler:headset',
    includes: ['Soporte técnico 24/7', 'Actualizaciones de seguridad', 'Backup automático', 'Monitoreo de performance']
  },
  {
    id: 'hosting',
    title: 'Hosting Premium + CDN (1 año)',
    description: 'Hosting optimizado con CDN global, SSL y alta disponibilidad',
    price: 18000, // $1,500/mes x 12 meses
    icon: 'tabler:server',
    includes: ['Servidor dedicado', 'CDN global', 'SSL incluido', 'Backup diario']
  },
  {
    id: 'multilenguaje',
    title: 'Implementación Multilenguaje',
    description: 'Sistema completo ES/EN con gestión de contenido multiidioma',
    price: 25000, // Estimación basada en complejidad
    icon: 'tabler:world',
    includes: ['Sistema i18n', 'Gestión de traducciones', 'URLs localizadas', 'SEO multiidioma']
  },
  {
    id: 'analytics',
    title: 'Analytics y Reporting Avanzado',
    description: 'Dashboard personalizado con métricas de conversión y comportamiento',
    price: 15000, // Setup completo + dashboard
    icon: 'tabler:chart-line',
    includes: ['Google Analytics 4', 'Tag Manager', 'Dashboard personalizado', 'Reportes automáticos']
  }
];

// Calcular totales
const totalProjectCost = fases.reduce((sum, fase) => sum + fase.price, 0);
const totalDuration = fases.reduce((sum, fase) => sum + fase.duration, 0);
const formatPrice = (price) => `$${price.toLocaleString('es-MX')}`;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  
  <!-- Resumen del Proyecto -->
  <div class="mb-12 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-xl p-8">
    <div class="max-w-4xl mx-auto text-center">
      <h3 class="text-3xl font-bold mb-4">Cotización Proyecto Rally Maya México</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white/10 rounded-lg p-4">
          <div class="text-2xl font-bold">{formatPrice(totalProjectCost)} MXN</div>
          <div class="text-blue-200">Costo Total del Proyecto</div>
        </div>
        <div class="bg-white/10 rounded-lg p-4">
          <div class="text-2xl font-bold">{totalDuration} semanas</div>
          <div class="text-blue-200">Duración Estimada</div>
        </div>
        <div class="bg-white/10 rounded-lg p-4">
          <div class="text-2xl font-bold">4 Fases</div>
          <div class="text-blue-200">Diseño + Desarrollo</div>
        </div>
      </div>
    </div>
  </div>

  <div class="pricing-calculator">
    <!-- Fases del Proyecto -->
    <div class="mb-12">
      <h3 class="text-2xl font-bold text-center mb-8 dark:text-white">Fases del Proyecto</h3>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {fases.map((fase) => (
          <div class="pricing-card relative bg-white dark:bg-slate-900 rounded-lg border border-gray-200 dark:border-gray-700 p-8 shadow-lg hover:shadow-xl transition-all duration-300">
            {fase.popular && (
              <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
                <span class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-6 py-2 rounded-full text-sm font-semibold shadow-lg">
                  Esencial
                </span>
              </div>
            )}
            
            <div class="text-center mb-6">
              <Icon name={fase.icon} class="w-16 h-16 mx-auto mb-4 text-blue-600" />
              <h4 class="text-xl font-bold mb-3 dark:text-white">{fase.title}</h4>
              <p class="text-gray-600 dark:text-gray-400 text-sm mb-6">{fase.description}</p>
              
              <div class="text-4xl font-bold text-blue-600 mb-2">
                {formatPrice(fase.price)}
              </div>
              <div class="text-sm text-gray-500 dark:text-gray-400 font-semibold">MXN • {fase.duration} semanas</div>
            </div>

            <div class="space-y-4 mb-8">
              <h5 class="font-semibold text-gray-800 dark:text-gray-200">Incluye:</h5>
              <ul class="space-y-2">
                {fase.items.map((item) => (
                  <li class="flex items-start text-sm">
                    <Icon name="tabler:check" class="w-4 h-4 text-green-500 mt-0.5 mr-2 flex-shrink-0" />
                    <span class="dark:text-gray-300">{item}</span>
                  </li>
                ))}
              </ul>
            </div>

            {fase.details && (
              <div class="border-t pt-4 mb-6">
                <h6 class="font-semibold text-gray-700 dark:text-gray-300 mb-2">Desglose:</h6>
                <div class="space-y-1">
                  {fase.details.subtasks.map((subtask) => (
                    <div class="flex justify-between text-xs text-gray-600 dark:text-gray-400">
                      <span>{subtask.name}</span>
                      <span>{subtask.hours} • {subtask.cost} MXN</span>
                    </div>
                  ))}
                </div>
              </div>
            )}

            <label class="flex items-center justify-center space-x-2 cursor-pointer">
              <input 
                type="checkbox" 
                data-phase={fase.id}
                data-price={fase.price}
                data-duration={fase.duration}
                data-title={fase.title}
                class="phase-checkbox w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                checked={fase.popular}
              />
              <span class="text-sm font-medium dark:text-white">Incluir en proyecto</span>
            </label>
          </div>
        ))}
      </div>
    </div>

    <!-- Servicios Adicionales -->
    <div class="mb-12">
      <h3 class="text-2xl font-bold text-center mb-8 dark:text-white">Servicios Adicionales</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {extras.map((extra) => (
          <div class="bg-gray-50 dark:bg-slate-800 rounded-lg border border-gray-200 dark:border-gray-700 p-6 hover:shadow-lg transition-shadow">
            <div class="text-center mb-4">
              <Icon name={extra.icon} class="w-12 h-12 mx-auto mb-3 text-green-600" />
              <h4 class="text-lg font-semibold mb-2 dark:text-white">{extra.title}</h4>
              <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">{extra.description}</p>
              
              <div class="text-2xl font-bold text-green-600 mb-2">
                {formatPrice(extra.price)}
              </div>
              <div class="text-xs text-gray-500 dark:text-gray-400 font-semibold">MXN</div>
            </div>

            {extra.includes && (
              <div class="mb-4">
                <ul class="space-y-1">
                  {extra.includes.map((item) => (
                    <li class="flex items-center text-xs text-gray-600 dark:text-gray-400">
                      <Icon name="tabler:check" class="w-3 h-3 text-green-500 mr-1" />
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            <label class="flex items-center justify-center space-x-2 cursor-pointer">
              <input 
                type="checkbox" 
                data-extra={extra.id}
                data-price={extra.price}
                data-title={extra.title}
                class="extra-checkbox w-5 h-5 text-green-600 border-gray-300 rounded focus:ring-green-500"
              />
              <span class="text-sm font-medium dark:text-white">Agregar</span>
            </label>
          </div>
        ))}
      </div>
    </div>

    <!-- Resumen y Total -->
    <div class="bg-gradient-to-r from-blue-600 to-blue-800 text-white rounded-xl p-8">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <div>
            <h3 class="text-2xl font-bold mb-4">Resumen del Proyecto</h3>
            <div id="selected-items" class="space-y-2 mb-6 min-h-[120px]">
              <div class="text-blue-200 italic" id="no-items-message">
                Selecciona las fases que deseas incluir en tu proyecto
              </div>
            </div>
            
            <div class="border-t border-blue-400 pt-4">
              <div class="flex justify-between items-center text-xl font-bold mb-2">
                <span>Total del Proyecto:</span>
                <span id="total-price">$0 MXN</span>
              </div>
              <div class="flex justify-between items-center text-lg">
                <span>Duración estimada:</span>
                <span id="estimated-duration">0 semanas</span>
              </div>
              <div class="text-blue-200 mt-2 text-sm">
                *Precios basados en cotizaciones técnicas originales
              </div>
            </div>
          </div>

          <div class="text-center lg:text-right">
            <div class="mb-6">
              <div class="text-lg mb-2">¿Listo para comenzar?</div>
              <div class="text-sm text-blue-200">Obtén tu presupuesto formal</div>
            </div>
            
            <div class="space-y-3">
              <button 
                id="request-quote-btn"
                class="w-full lg:w-auto bg-white text-blue-600 hover:bg-gray-100 font-semibold py-3 px-6 rounded-lg transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed"
                disabled
              >
                📧 Solicitar Cotización Formal
              </button>
              <br>
              <button 
                class="w-full lg:w-auto border border-white text-white hover:bg-white hover:text-blue-600 font-semibold py-3 px-6 rounded-lg transition-colors duration-200"
                onclick="window.open('mailto:juancarlos@elitekode.com?subject=Reunión Rally Maya México&body=Hola, me interesa programar una reunión para discutir el proyecto Rally Maya con las cotizaciones técnicas detalladas.', '_blank')"
              >
                📅 Programar Reunión
              </button>
              <br>
              <button 
                class="w-full lg:w-auto border border-white text-white hover:bg-white hover:text-blue-600 font-semibold py-3 px-6 rounded-lg transition-colors duration-200"
                onclick="window.open('/docs/cotizacionRallyMaya.pdf', '_blank')"
              >
                📄 Descargar PDF Completo
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Tecnologías Confirmadas -->
    <div class="mt-12 bg-gray-50 dark:bg-slate-800 rounded-xl p-8">
      <div class="max-w-6xl mx-auto">
        <h3 class="text-xl font-bold mb-6 text-center dark:text-white">Stack Tecnológico Confirmado</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <Icon name="tabler:brand-react" class="w-12 h-12 mx-auto mb-3 text-blue-600" />
            <h4 class="font-semibold mb-2 dark:text-white">Frontend</h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">Next.js + Tailwind CSS</p>
          </div>
          <div class="text-center">
            <Icon name="tabler:database" class="w-12 h-12 mx-auto mb-3 text-green-600" />
            <h4 class="font-semibold mb-2 dark:text-white">Backend</h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">Strapi CMS + PostgreSQL</p>
          </div>
          <div class="text-center">
            <Icon name="tabler:cloud" class="w-12 h-12 mx-auto mb-3 text-purple-600" />
            <h4 class="font-semibold mb-2 dark:text-white">Infraestructura</h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">CDN + SendGrid + Analytics</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <Fragment slot="bg">
    <div class="absolute inset-0 bg-blue-50 dark:bg-slate-800"></div>
  </Fragment>
</WidgetWrapper>

  <script>
  // Funcionalidad mejorada de la calculadora
  document.addEventListener('DOMContentLoaded', function() {
    const phaseCheckboxes = document.querySelectorAll('.phase-checkbox') as NodeListOf<HTMLInputElement>;
    const extraCheckboxes = document.querySelectorAll('.extra-checkbox') as NodeListOf<HTMLInputElement>;
    const selectedItemsContainer = document.getElementById('selected-items') as HTMLElement;
    const totalPriceElement = document.getElementById('total-price') as HTMLElement;
    const estimatedDurationElement = document.getElementById('estimated-duration') as HTMLElement;
    const requestQuoteBtn = document.getElementById('request-quote-btn') as HTMLButtonElement;

    interface SelectedItem {
      type: 'phase' | 'extra';
      title: string;
      price: number;
      duration?: number;
    }

    let selectedItems: SelectedItem[] = [];
    let totalPrice = 0;
    let totalDuration = 0;

    // Función para formatear precios en MXN
    function formatPrice(price: number): string {
      return `$${price.toLocaleString('es-MX')}`;
    }

    // Inicializar con elementos marcados
    updateCalculator();

    phaseCheckboxes.forEach(checkbox => {
      checkbox.addEventListener('change', updateCalculator);
    });

    extraCheckboxes.forEach(checkbox => {
      checkbox.addEventListener('change', updateCalculator);
    });

    requestQuoteBtn.addEventListener('click', function() {
      if (selectedItems.length > 0) {
        generateQuoteEmail();
      }
    });

    function updateCalculator() {
      selectedItems = [];
      totalPrice = 0;
      totalDuration = 0;

      phaseCheckboxes.forEach(checkbox => {
        if (checkbox.checked) {
          const item: SelectedItem = {
            type: 'phase',
            title: checkbox.dataset.title || '',
            price: parseInt(checkbox.dataset.price || '0'),
            duration: parseFloat(checkbox.dataset.duration || '0') || 0
          };
          selectedItems.push(item);
          totalPrice += item.price;
          totalDuration += item.duration || 0;
        }
      });

      extraCheckboxes.forEach(checkbox => {
        if (checkbox.checked) {
          const item: SelectedItem = {
            type: 'extra',
            title: checkbox.dataset.title || '',
            price: parseInt(checkbox.dataset.price || '0')
          };
          selectedItems.push(item);
          totalPrice += item.price;
        }
      });

      updateDisplay();
    }

    function updateDisplay() {
      selectedItemsContainer.innerHTML = '';

      if (selectedItems.length === 0) {
        selectedItemsContainer.innerHTML = '<div class="text-blue-200 italic">Selecciona las fases que deseas incluir en tu proyecto</div>';
        requestQuoteBtn.disabled = true;
        requestQuoteBtn.classList.add('opacity-50', 'cursor-not-allowed');
      } else {
        selectedItems.forEach(item => {
          const itemDiv = document.createElement('div');
          itemDiv.className = 'flex justify-between items-center py-1';
          itemDiv.innerHTML = `
            <span class="text-white">${item.title}</span>
            <span class="text-blue-200 font-semibold">${formatPrice(item.price)} MXN</span>
          `;
          selectedItemsContainer.appendChild(itemDiv);
        });
        requestQuoteBtn.disabled = false;
        requestQuoteBtn.classList.remove('opacity-50', 'cursor-not-allowed');
      }

      totalPriceElement.textContent = `${formatPrice(totalPrice)} MXN`;
      estimatedDurationElement.textContent = `${totalDuration} semanas`;
    }

    function generateQuoteEmail() {
      let emailBody = `Hola,

Me interesa solicitar una cotización formal para el proyecto Rally Maya México basada en las especificaciones técnicas detalladas.

FASES SELECCIONADAS:
`;

      selectedItems.forEach(item => {
        if (item.type === 'phase') {
          emailBody += `✓ ${item.title} - ${formatPrice(item.price)} MXN\n`;
        }
      });

      const extraItems = selectedItems.filter(item => item.type === 'extra');
      if (extraItems.length > 0) {
        emailBody += `
SERVICIOS ADICIONALES:
`;
        extraItems.forEach(item => {
          emailBody += `✓ ${item.title} - ${formatPrice(item.price)} MXN\n`;
        });
      }

      emailBody += `
RESUMEN DEL PROYECTO:
- Total: ${formatPrice(totalPrice)} MXN
- Duración: ${totalDuration} semanas
- Stack: Next.js + Strapi + PostgreSQL
- Incluye: Diseño UX/UI + Desarrollo + Testing + Lanzamiento

Por favor, envíenme la propuesta formal con términos y condiciones.

Saludos cordiales.`;

      const subject = 'Cotización Formal Rally Maya México - Proyecto Completo';
      const mailtoLink = `mailto:juancarlos@elitekode.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(emailBody)}`;
      
      window.open(mailtoLink, '_blank');
    }
  });
</script>

<style>
  .pricing-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }
  
  .pricing-card:hover {
    transform: translateY(-4px);
  }
  
  .phase-checkbox:checked + span,
  .extra-checkbox:checked + span {
    font-weight: 600;
  }
  
  .pricing-calculator {
    animation: fadeIn 0.6s ease-in-out;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
